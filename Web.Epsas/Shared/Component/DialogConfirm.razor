<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.subtitle1" Color="Color.Primary">
            <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Primary" Class="mr-3 mb-n1" />
            Mensaje del Sistema
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined">@message</MudAlert>
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="Cancel">Cancelar</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="DeleteServer">Aceptar</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string message { get; set; }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void DeleteServer()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

}
