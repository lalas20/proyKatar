
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.subtitle1" Color="Color.Primary">
            <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Primary" Class="mr-3 mb-n1" />
            Mensaje del Sistema
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>
            @switch (state)
            {
                case State.Success:
                    <MudAlert Severity="Severity.Success" Variant="Variant.Outlined">@message</MudAlert>
                    break;
                case State.Warning:
                    <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined">@message</MudAlert>
                    break;
                case State.Error:
                    <MudAlert Severity="Severity.Error" Variant="Variant.Text">@message</MudAlert>
                    break;
                case State.NoData:
                    <MudAlert Severity="Severity.Info" Variant="Variant.Outlined">@message</MudAlert>
                    break;
                default:
                    <MudAlert Severity="Severity.Normal" Variant="Variant.Outlined">@message</MudAlert>
                    break;
            }
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="@Color.Primary" Variant="Variant.Text" OnClick="Submit">Aceptar</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string message { get; set; }
    [Parameter] public State state { get; set; }
    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}